# Location-Based Attendance System - Environment Configuration
# Copy this file to .env and update with your actual values

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_DATABASE=attendance_system
MYSQL_USER=root
MYSQL_PASSWORD=your_mysql_password_here
MYSQL_PORT=3306

# Flask Server Configuration
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=False

# ESP32 Configuration (update in esp32_ble_scanner.py)
# TARGET_SERVICE_UUID=12345678-1234-5678-1234-56789abcdef0
# CLASSROOM_ID=101
# SERVER_URL=http://192.168.1.100:5000/api/attendance
# SCAN_INTERVAL=5

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=attendance_server.log

# Security (Optional - for production)
# SECRET_KEY=your_secret_key_here
# JWT_SECRET=your_jwt_secret_here
